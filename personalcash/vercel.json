{

  "version": 2,

  "builds": [

    {

      "src": "package.json",

      "use": "@vercel/static-build",

      "config": {

        "installCommand": "npm install --legacy-peer-deps",

        "buildCommand": "npm run build", // Script de build atualizado

        "outputDirectory": "web-build" // Diretório de saída padrão do Expo para web builds

      }

    }

  ],

  "routes": [

    {

      "src": "/(.*)",

      "dest": "/web-build/$1" // Certifique-se que está correto

    }

  ]

}
